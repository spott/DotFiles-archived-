[merge]
	tool = threesome

[mergetool "threesome"]
	cmd = "~/bin/mvim -f $BASE $LOCAL $REMOTE $MERGED -c 'ThreesomeInit'"
	trustExitCode = true

[diff]
	tool = vimdiff

[difftool "vimdiff"]
	cmd = "~/bin/mvim -d $BASE $LOCAL"

[color]
	ui = true

